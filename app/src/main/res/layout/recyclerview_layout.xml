<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cvMatch"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/background_with_shadow">

        <TextView android:layout_width="match_parent"
                  android:id="@+id/tvDate"
                  android:text="Date"
                  android:gravity="center"
                  android:textColor="@color/md_indigo_600"
                  android:layout_height="wrap_content"
                  android:fontFamily="@font/lato"
                  android:textSize="10pt"
                  android:layout_marginBottom="10dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="match_parent"
                      android:id="@+id/tvTeamKiri"
                      android:text="TeamKiri"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textSize="10pt"
                      android:fontFamily="@font/lato"
                      android:textColor="@color/md_grey_800"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:text="0"
                      android:id="@+id/tvSkorKiri"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textSize="10pt"
                      android:fontFamily="@font/lato"
                      android:textColor="@color/md_grey_800"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:text="VS"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textSize="10pt"
                      android:fontFamily="@font/lato_bold"
                      android:textColor="@color/md_black_1000"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:text="1"
                      android:id="@+id/tvSkorKanan"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textSize="10pt"
                      android:fontFamily="@font/lato"
                      android:textColor="@color/md_grey_800"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="match_parent"
                      android:text="Team Kanan"
                      android:id="@+id/tvTeamKanan"
                      android:gravity="center"
                      android:layout_weight="1"
                      android:textSize="10pt"
                      android:fontFamily="@font/lato"
                      android:textColor="@color/md_grey_800"
                      android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
